{
  "name": "@svebcomponents/build",
  "version": "0.0.4",
  "type": "module",
  "bin": {
    "svebcomponents": "./dist/cli.js"
  },
  "scripts": {
    "dev": "tsc --watch",
    "build": "tsc",
    "check": "tsc --noEmit",
    "lint": "pnpm /^lint:.*/",
    "lint:eslint": "eslint .",
    "lint:format": "prettier --check .",
    "fix": "pnpm /^fix:.*/",
    "fix:eslint": "eslint . --fix",
    "fix:format": "prettier --write .",
    "test": "vitest run",
    "test:dev": "vitest --watch"
  },
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "peerDependencies": {
    "@svebcomponents/ssr": "^0.0.5",
    "rolldown": "^1.0.0-beta.29"
  },
  "devDependencies": {
    "@svebcomponents/eslint-config": "workspace:*",
    "@svebcomponents/prettier-config": "workspace:*",
    "@svebcomponents/typescript-config": "workspace:*",
    "@types/node": "catalog:",
    "rolldown": "catalog:",
    "svelte": "catalog:",
    "vite": "catalog:",
    "vitest": "catalog:"
  },
  "dependencies": {
    "@svebcomponents/auto-options": "workspace:*",
    "@svebcomponents/ssr": "workspace:*",
    "rollup-plugin-svelte": "catalog:",
    "tslib": "catalog:",
    "typescript": "catalog:",
    "unconfig": "catalog:",
    "vitest": "catalog:"
  },
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  }
}
